{
  "PostToolUse": [
    {
      "matcher": "Edit|Write",
      "hooks": [
        {
          "type": "command",
          "command": "echo '🐛 Fix applied - verifying solution...' >&2"
        }
      ]
    }
  ],
  "PreToolUse": [
    {
      "matcher": "Bash",
      "hooks": [
        {
          "type": "command",
          "command": "echo '🔍 Debugging: Executing diagnostic command' >&2"
        }
      ]
    }
  ]
}